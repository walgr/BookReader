<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="PopWindowStyle" parent="AppTheme">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="MainTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/TranslucentMain</item>
    </style>

    <style name="TranslucentMain">
        <item name="android:windowEnterAnimation">@anim/zoom_exit</item>
        <item name="android:windowExitAnimation">@anim/zoom_enter</item>
    </style>


    <style name="BookInfoStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowFullscreen">true</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowAnimationStyle">@style/Translucent</item>
    </style>

    <style name="Translucent">
        <item name="android:windowEnterAnimation">@anim/actionset_up</item>
        <item name="android:windowExitAnimation">@anim/actionset_down</item>

        <!--<item name="android:activityOpenEnterAnimation">@anim/actionset_up</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/actionset_down</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/zoom_exit</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/zoom_enter</item>-->
    </style>
</resources>
